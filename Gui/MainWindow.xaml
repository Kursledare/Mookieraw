                        <TextBlock Width="441" Height="37" />
                        <Rectangle Width="441" Height="1" Fill="Black"/>
                        <TextBlock Text="Name" />
                    </StackPanel>
                </StackPanel>
                
                <StackPanel Name="Spacer" Width="26" Height="313">
                    <Rectangle Height="313" Width="1" Fill="Black"></Rectangle>
                </StackPanel>
                
                <StackPanel Name="SecondCombatantPanel" Width="441" Height="313" Orientation="Vertical"  Margin="0,0,26,0">

                </StackPanel>
            </StackPanel>
            
            <StackPanel Name="Footer" Width="960" Height="203" Background="Black">
                
            </StackPanel>


        </StackPanel>
        
    </Grid>
</Window>
